# -*- mode: shell-script -*-
emacs () {
  if [ "$(hostname)" = "Jazz.local" ]; then
    if [ -n "$(pgrep Emacs)" ] ; then
      open -a/Applications/Emacs.app && sleep 3;
    fi
    case $1 in
      "" )
        open -a/Applications/Emacs.app;;
      *)
        emacsclient $@;;
    esac
  else
    $(locate_bin emacs) "$@";
  fi
}
